                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/test"
                android:textSize="18sp"
                android:textStyle="normal"
                />
            <TextView
                android:id="@+id/placeholder_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/test"
                android:textSize="18sp"
                android:textStyle="normal"
                />
            <TextView
                android:id="@+id/placeholder_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/test"
                android:textSize="18sp"
                android:textStyle="normal"
                />
            <TextView
                android:id="@+id/placeholder_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/test"
                android:textSize="18sp"
                android:textStyle="normal"
                />
            <TextView
                android:id="@+id/placeholder_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/test"
                android:textSize="18sp"
                android:textStyle="normal"
                />
            <TextView
                android:id="@+id/placeholder_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/test"
                android:textSize="18sp"
                android:textStyle="normal"
                />
            <TextView
                android:id="@+id/placeholder_17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/test"
                android:textSize="18sp"
                android:textStyle="normal"
                />
            <TextView
                android:id="@+id/placeholder_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/test"
                android:textSize="18sp"
                android:textStyle="normal"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/additional_layout"
        android:layout_width="350dp"
        android:layout_height="270dp"
        android:background="@color/quantum_grey"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/additional_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:background="@drawable/myimage"
            android:onClick="toggleAdditional"
            android:tag = "close"
            />

        <TextView
            android:id="@+id/blank_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="normal"
            />
        <TextView
            android:id="@+id/blank_space1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="normal"
            />

        <TextView
            android:id="@+id/additional_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/test"
            android:textSize="18sp"
            android:textStyle="normal"
            />

        <TextView
            android:id="@+id/additional_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/test"
            android:textSize="18sp"
            android:textStyle="normal"
            />

        <TextView
            android:id="@+id/additional_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/test"
            android:textSize="18sp"
            android:textStyle="normal"
            />

        <TextView
            android:id="@+id/additional_death"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/test"
            android:textSize="18sp"
            android:textStyle="normal"
            />

        <TextView
            android:id="@+id/additional_recovered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/test"
            android:textSize="18sp"
            android:textStyle="normal"
            />

        <TextView
            android:id="@+id/blank_space2"
            android:layout_width="wrap_content"
