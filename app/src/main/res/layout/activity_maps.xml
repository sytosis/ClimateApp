<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity">


    <fragment android:id="@+id/autocomplete_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"/>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/autocomplete_fragment"/>

    <ImageButton
        android:id="@+id/info_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/myimage"
        android:onClick="toggleInfo"/>

    <ImageButton
        android:id="@+id/myLocation_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/myimage"
        android:onClick="myLocation"/>

    <ImageButton
        android:id="@+id/overview_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/myimage"
        android:onClick="toggleOverview"/>

    <ImageView
        android:id = "@+id/loading_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:background="@drawable/myimage"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="0.15">
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="0.8">

            <LinearLayout
                android:id = "@+id/overview_box"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:orientation="horizontal"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.15">
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.7">


                    <LinearLayout
                        android:layout_width="375dp"
                        android:layout_height="500dp"
                        android:background="@color/quantum_amber50"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/overview_close_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|end"
                            android:background="@drawable/myimage"
                            android:onClick="toggleOverview"
                            />
                        <LinearLayout
                            android:id = "@+id/overview_date_layout"
                            android:layout_width="375dp"
                            android:layout_height="23dp"
                            android:background="@color/quantum_amber50"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/overview_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Covid-19 country cases: "
                                android:textSize="18sp"
                                android:textStyle="normal"
                                />
                            <ImageButton
                                android:layout_width="23dp"
                                android:layout_height="23dp"
                                android:background="@drawable/myimage"
                                android:onClick="toggleDate"
                                android:contentDescription="Button"
                                android:tag="region"
                                />
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            />
                        <TextView
                            android:id="@+id/overview_0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/test"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            />
                        <TextView
                            android:id="@+id/overview_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/test"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            />
                        <TextView
                            android:id="@+id/overview_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/test"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            />
                        <TextView
                            android:id="@+id/overview_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/test"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            />
                        <TextView
                            android:id="@+id/overview_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/test"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            />
                        <TextView
                            android:id="@+id/overview_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/test"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            />
                        <TextView
                            android:id="@+id/overview_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/test"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            />
                        <TextView
                            android:id="@+id/overview_7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/test"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            />
                        <TextView
                            android:id="@+id/overview_8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/test"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            />
                        <TextView
                            android:id="@+id/overview_9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/test"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            />
                        <TextView
                            android:id="@+id/overview_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/test"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            />
                        <TextView
                            android:id="@+id/overview_11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/test"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            />
                        <TextView
                            android:id="@+id/overview_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/test"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            />
                        <TextView
                            android:id="@+id/overview_13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/test"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            />
                        <TextView
                            android:id="@+id/overview_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/test"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            />
                        <TextView
                            android:id="@+id/overview_15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/test"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            />

                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.15">
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

   <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:orientation="vertical">
       <RelativeLayout
           android:layout_width="fill_parent"
           android:layout_height="0dip"
           android:layout_weight="0.15">
       </RelativeLayout>

       <RelativeLayout
           android:layout_width="fill_parent"
           android:layout_height="0dip"
           android:layout_weight="0.8">

           <LinearLayout
               android:id = "@+id/text_box"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:visibility="gone"
               android:orientation="horizontal"
               android:gravity="center">

               <RelativeLayout
                   android:layout_width="0dip"
                   android:layout_height="fill_parent"
                   android:layout_weight="0.05"></RelativeLayout>

               <RelativeLayout
                   android:layout_width="0dip"
                   android:layout_height="fill_parent"
                   android:layout_weight="0.9">
                   <LinearLayout
                       android:layout_width="375dp"
                       android:layout_height="500dp"
                       android:background="@color/white"
                       android:gravity="center_horizontal"
                       android:orientation="vertical">

                       <ImageButton
                           android:id="@+id/info_close_button"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="top|end"
                           android:background="@drawable/myimage"
                           android:onClick="toggleInfo"
                           />

                       <TextView
                           android:id="@+id/info_name"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:gravity="center"
                           android:text="@string/test"
                           android:textSize="18sp"
                           android:textStyle="normal"
                           />
                       <TextView
                           android:id="@+id/info_aqi"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:gravity="center"
                           android:text="@string/test"
                           android:textSize="18sp"
                           android:textStyle="normal"
                           />
                       <TextView
                           android:id="@+id/info_uv"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:gravity="center"
                           android:text="@string/test"
                           android:textSize="18sp"
                           android:textStyle="normal"
                           />
                       <LinearLayout
                           android:id = "@+id/date_display_layout"
                           android:layout_width="375dp"
                           android:layout_height="23dp"
                           android:background="@color/white"
                           android:gravity="center"
                           android:orientation="horizontal">
                           <TextView
                               android:id="@+id/date_view"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_gravity="center"
                               android:gravity="center"
                               android:text="Covid-19 cases: "
                               android:textSize="18sp"
                               android:textStyle="normal"
                               />
                           <ImageButton
                               android:id="@+id/date_open_button"
                               android:layout_width="23dp"
                               android:layout_height="23dp"
                               android:background="@drawable/myimage"
                               android:onClick="toggleDate"
                               android:contentDescription="Button"
                               android:tag="region"
                               android:visibility="gone"
                               />
                       </LinearLayout>

                       <LinearLayout
                           android:layout_width="375dp"
                           android:layout_height="23dp"
                           android:background="@color/white"
                           android:gravity="center"
                           android:orientation="horizontal">

                           <TextView
                               android:id="@+id/region_name"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_gravity="center"
                               android:gravity="center"
                               android:text="@string/test"
                               android:textSize="18sp"
                               android:textStyle="normal"
                               />

                           <ImageButton
                               android:id="@+id/region_detailed_button"
                               android:layout_width="23dp"
                               android:layout_height="23dp"
                               android:background="@drawable/myimage"
                               android:onClick="toggleAdditional"
                               android:contentDescription="Button"
                               android:tag="region"
                               android:visibility="gone"
                               />

                       </LinearLayout>

                       <TextView
                           android:id="@+id/region_cases"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:gravity="center"
                           android:text="@string/test"
                           android:textSize="18sp"
                           android:textStyle="normal"
                           />
                       <LinearLayout
                           android:layout_width="375dp"
                           android:layout_height="23dp"
                           android:background="@color/white"
                           android:gravity="center"
                           android:orientation="horizontal">

                           <TextView
                               android:id="@+id/country_name"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_gravity="center"
                               android:gravity="center"
                               android:text="@string/test"
                               android:textSize="18sp"
                               android:textStyle="normal"
                               />

                           <ImageButton
                               android:id="@+id/country_detailed_button"
                               android:layout_width="23dp"
                               android:layout_height="23dp"
                               android:background="@drawable/myimage"
                               android:onClick="toggleAdditional"
                               android:tag="country"
                               android:contentDescription="Button"
                               android:visibility="gone"
                               />
                       </LinearLayout>

                       <TextView
                           android:id="@+id/country_cases"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:gravity="center"
                           android:text="@string/test"
                           android:textSize="18sp"
                           android:textStyle="normal"
                           />
                   </LinearLayout>
               </RelativeLayout>
               <RelativeLayout
                   android:layout_width="0dip"
                   android:layout_height="fill_parent"
                   android:layout_weight="0.05">
               </RelativeLayout>
           </LinearLayout>
       </RelativeLayout>

   </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id = "@+id/date_layout"
        android:orientation="horizontal"
        android:visibility = "gone"
        android:layout_marginTop="250dp"
        >

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.15">
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.7">

            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="270dp"
                android:background="@color/quantum_cyan600"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/date_close_button"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_gravity="top|end"
                    android:background="@drawable/myimage"
                    android:onClick="toggleDate"
                    android:contentDescription="Button"
                    android:tag="dateButton"
                    />

                <DatePicker
                    android:id="@+id/datePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:datePickerMode="spinner"
                    android:calendarViewShown="false"
                    />
                <ImageButton
                    android:id="@+id/date_select_button"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:background="@drawable/myimage"
                    android:onClick="datePick"
                    android:contentDescription="Button"
                    android:tag="dateButton"
                    />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.15">
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/additional_layout"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="250dp"
        >
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight = "0.1">

        </RelativeLayout>

        <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight = "0.8">

            <LinearLayout
            android:layout_width="350dp"
            android:layout_height="270dp"
            android:background="@color/quantum_grey"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/additional_close_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:background="@drawable/myimage"
                android:onClick="toggleAdditional"
                android:tag = "close"
                />

            <TextView
                android:id="@+id/blank_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="normal"
                />
            <TextView
                android:id="@+id/blank_space1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="normal"
                />

            <TextView
                android:id="@+id/additional_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/test"
                android:textSize="18sp"
                android:textStyle="normal"
                />

            <TextView
                android:id="@+id/additional_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/test"
                android:textSize="18sp"
                android:textStyle="normal"
                />

            <TextView
                android:id="@+id/additional_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/test"
                android:textSize="18sp"
                android:textStyle="normal"
                />

            <TextView
                android:id="@+id/additional_death"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/test"
                android:textSize="18sp"
                android:textStyle="normal"
                />

            <TextView
                android:id="@+id/additional_recovered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/test"
                android:textSize="18sp"
                android:textStyle="normal"
                />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight = "0.1">
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>